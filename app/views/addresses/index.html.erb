<h1>Addresses</h1>
<hr />

<h2><%= @addresses.length <= 0 ? "No Addresses" : "" %></h2> 

<ul>
  <% @addresses.each do |address| %>
    <li>

<div class="card card-form mb-3">
<div class="form-group">
      <h1><%= link_to address.street, location %></h1>
      <p>City: <%= address.city %></p>
</div>
</div>
    </li>
  <% end %>
</ul>

<center>
<button class="btn btn-info mt-3 mb-3"> 
</button>
</center>